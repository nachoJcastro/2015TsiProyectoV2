@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <h3 class="text-center">@Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</h3>
    <h5 class="text-center"><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-power-off"></i></a></h5>
    }
}
