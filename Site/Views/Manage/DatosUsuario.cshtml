@model Site.Models.UsuarioModel

<div class="container" style="margin-top:20px;">
    <div class="panel panel-login">
        <div class="panel-heading">
            <div class="col-md-12 text-center">
                <h3 class="titulo-usuario">Datos del Usuario</h3>
            </div>
            <hr />
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/img/user.png" alt="" class="img-circle img-thumbnail">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.Label("Reputacion como vendedor")
                            </div>
                            <div class="col-md-12">
                                <input type="hidden" data-filled="fa fa-heart fa-2x" data-empty="fa fa-heart-o fa-2x" class="rating" data-start="0" data-stop="5" value="@Model.reputacion_Venta" data-readonly />
                                @*@Html.DisplayFor(model => model.reputacion_Venta)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.Label("Reputacion como comprador")
                            </div>
                            <div class="col-md-12">
                                <input type="hidden" data-filled="fa fa-heart fa-2x" data-empty="fa fa-heart-o fa-2x" class="rating" data-start="0" data-stop="5" value="@Model.reputacion_Compra" data-readonly />
                                @*@Html.DisplayFor(model => model.reputacion_Compra)*@
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-3">
                        <h3><span class="label label-primary">@Model.nombre @Model.apellido</span></h3>
                        <h5>@Model.nick</h5>
                        <small>
                            <cite title="@Model.direccion">
                                @Model.direccion<i class="glyphicon glyphicon-map-marker">
                                </i>
                            </cite>
                        </small>
                        <p class="datos-user">
                            <i class="glyphicon glyphicon-envelope"></i>@Model.email
                            <br />
                            <i class="glyphicon glyphicon-globe"></i><a href="#">www.jquery2dotnet.com</a>
                            <br />
                            <i class="glyphicon glyphicon-gift"></i>@Model.fecha_Nacimiento
                            <br />
                            <i class="fa fa-phone"></i>@Model.telefono
                            @if (Model.billetera != 0)
                            {
                                <br />
                                <i class="fa fa-money"></i>@Model.billetera

                            }
                            <br />
                            <i class="fa fa-thumbs-up"></i>@Model.preferencias
                        </p>
                    </div>
                    <div class="col-sm-3">
                        <div class="hero-widget well well-sm">
                            <div class="icon">
                                <i class="fa fa-money"></i>
                            </div>
                            <div class="text">
                                <var>614</var>
                                <label class="text-muted">Ventas</label>
                            </div>
                            <div class="options">
                                <a href="#" onclick="location.href='@Url.Action("ListadoComprasVentas/", "Calificacion", new { ventas = false})'" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-search"></i> Ver Ventas</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="hero-widget well well-sm">
                            <div class="icon">
                                <i class="fa fa-gavel"></i>
                            </div>
                            <div class="text">
                                <var>75%</var>
                                <label class="text-muted">Compras</label>
                            </div>
                            <div class="options">
                                <a href="#" onclick="location.href='@Url.Action("ListadoComprasVentas/", "Calificacion", new { ventas = true })'" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-search"></i> Ver Compras</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

