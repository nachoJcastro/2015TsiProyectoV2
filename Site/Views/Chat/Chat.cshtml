<link href="@Url.Content("~/Content/estiloChat.css")" rel="stylesheet" type="text/css" />

<div class="container">
    <br />
    <br />
    <br />
    <div id="divContainer">
        <!--<div id="divLogin" class="login">
            <div>
                Tu nombre:<br />
                <input id="txtNickUsuario" type="text" class="textBox" />
            </div>
            <div id="divButton">
                <input id="btnComenzarChat" type="button" class="submitButton" value="Iniciar Chat" />
