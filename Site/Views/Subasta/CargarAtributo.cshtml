@model List<Site.Models.AtributoSite>
@Html.AntiForgeryToken()
@using (Html.BeginForm())
{


    <div class="form-horizontal">

        @foreach (var atributo in Model)
        {

            <div class="form-group">
                @Html.Label(@atributo.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor(@atributo.valor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage(@atributo.valor, "", new { @class = "text-danger" })
                </div>
            </div>


    }

    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
